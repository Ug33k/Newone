{
  "name": "@project/monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --parallel --stream dev",
    "dev:web": "pnpm --filter @project/web dev",
    "dev:api": "pnpm --filter @project/api dev",
    "build": "pnpm --recursive --stream build",
    "build:web": "pnpm --filter @project/web build",
    "build:api": "pnpm --filter @project/api build",
    "start:web": "pnpm --filter @project/web start",
    "start:api": "pnpm --filter @project/api start:prod",
    "lint": "pnpm --recursive --stream lint",
    "lint:fix": "pnpm --recursive --stream lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "migration:generate": "pnpm --filter @project/api migration:generate",
    "migration:run": "pnpm --filter @project/api migration:run",
    "migration:revert": "pnpm --filter @project/api migration:revert",
    "seed": "pnpm --filter @project/api seed",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^1.11.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
